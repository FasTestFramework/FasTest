<?xml version="1.0" encoding="UTF-8"?>
<service>
    <id>rtl-peripherals</id>
    <name>Peripheral Server</name>
    <description>This service runs the Peripheral Server</description>
    <executable>java</executable>
    <env name="PERIPHERAL-SERVER-INSTALLED-LOCATION" value="D:/peripheral-server"/>
    <arguments>-jar "D:/peripheral-server\lib\rtl-peripherals-1.0.0-SNAPSHOT.jar"</arguments>
    <logmode>reset</logmode>
    <logpath>D:/peripheral-server\logs</logpath>
    <startmode>Automatic</startmode>                
</service>
